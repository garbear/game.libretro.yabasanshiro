<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.yabause"
		name="Sega - Saturn (Yabause)"
		version="0.9.15.35"
		provider-name="Guillaume Duhammel, Theo Berkau, Anders Montonen">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.saturn" version="1.0.0"/>
		<import addon="game.controller.saturn.multitap" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Sega Saturn</platforms>
		<extensions>cue|iso|mds|ccd|zip|chd|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.yabause</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="da_DK">Sega - Saturn (Yabause) v0.9.15</summary>
		<summary lang="en_GB">Sega - Saturn (Yabause) v0.9.15</summary>
		<description lang="da_DK">Yabause står for Yet Another Buggy And Uncomplete Saturn Emulator. Yabause kan starte Sega Saturn bios og spil, hvoraf nogle kan spilles.</description>
		<description lang="en_GB">Yabause stands for Yet Another Buggy And Uncomplete Saturn Emulator. Yabause can boot Sega Saturn bios and games, some of which are playable.</description>
		<disclaimer lang="da_DK">Billedkreditering: Anarkhya (anarkhya.deviantart.com)</disclaimer>
		<disclaimer lang="en_GB">Icon credit: Anarkhya (anarkhya.deviantart.com)</disclaimer>
		<disclaimer lang="ko_KR">아이콘 크레딧: Anarkhya(anarkhya.deviantart.com)</disclaimer>
	</extension>
</addon>
